{
  "include": [
    "env.d.ts",
    "src/App.vue",
    "src/main.ts",
    "src/modules/**/*.ts",
    "src/plugins/**/*.ts",
    "src/components/**/*.vue",
  ],
  "exclude": [
    "src/modules/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "element-plus/global",
      "unplugin-icons/types/vue",
      "vitest/globals"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}