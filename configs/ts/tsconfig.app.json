{
  "include": [
    "env.d.ts",
    "src/App.vue",
    "src/main.ts",
    "src/modules/**/*.ts",
    "src/plugins/**/*.ts",
    "src/components/**/*.vue",
  ],
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "node",
      "vite/client",
      "element-plus/global",
      "unplugin-icons/types/vue",
      "vitest/globals"
    ]
  }
}